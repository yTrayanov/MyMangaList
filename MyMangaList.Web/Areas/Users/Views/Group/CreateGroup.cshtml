@model GroupBindingModel
@{
    ViewData["Title"] = "CreateGroup";
}

<h1>Create new worlds with friends</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="@Model.Title"></label>
        <input asp-for="@Model.Title" class="form-control" placeholder="Title">
        <span asp-validation-for="@Model.Title" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-default">Create Group</button>
</form>

