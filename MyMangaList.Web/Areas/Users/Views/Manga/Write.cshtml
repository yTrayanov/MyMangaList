@model MangaBindingModel
@{
    ViewData["Title"] = "Write";
}
<h2><strong>Create your own world!</strong></h2>

<form method="post">
    <div class="form-group">
        <label asp-for="@Model.Title"></label>
        <input asp-for="@Model.Title" class="form-control" placeholder="Title">
        <span asp-validation-for="@Model.Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Genre"></label>
        <input asp-for="@Model.Genre" class="form-control" placeholder="Genre">
        <span asp-validation-for="@Model.Genre" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Image"></label>
        <input asp-for="@Model.Image" class="form-control" placeholder="Image Url Link">
        <span asp-validation-for="@Model.Image" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.ShortDescription"></label>
        <textarea class="form-control" asp-for="@Model.ShortDescription" rows="5"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Story"></label>
        <textarea class="form-control" asp-for="@Model.Story" rows="20"></textarea>
    </div>
    <button type="submit" class="btn btn-default">Write it</button>
</form>
